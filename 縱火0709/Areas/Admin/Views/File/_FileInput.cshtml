@using (Html.BeginForm("index", "File", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container" style="margin-top: 20px;">
        <div class="row">
            <div class="col-sm-4 p-l-50">
                <label for="file" class="custom-file">
                    @Html.TextBox("file", "", new { type = "file", @class = "custom-file-input" })
                    <span class="custom-file-control"></span>
                </label>
                <br>
                @Html.ValidationMessage("fileName", new { @class = "text-danger" })
            </div>
            <div class=" col-sm-6 pr-0">
                @Html.TextBox("addfileText", "", new { @class = "form-control", placeholder = "圖片未顯示而出現的文字" })
            </div>
            <div class=" col-sm-2 mb-4">
                <input type="submit" value="Add" class="btn btn-info" />
            </div>
        </div>
    </div>}